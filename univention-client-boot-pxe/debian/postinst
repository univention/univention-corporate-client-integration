#DEBHELPER#

mkdir -p /var/lib/univention-client-boot/pxelinux.cfg
test -e /usr/lib/syslinux/pxelinux.0 && ln -sf /usr/lib/syslinux/pxelinux.0 /var/lib/univention-client-boot/pxelinux.0
eval `univention-baseconfig shell`


if [ "$1" = "configure" ]; then
	if test -f /etc/init.d/univention-directory-listener
		then
		/etc/init.d/univention-directory-listener crestart
	fi
fi

univention-baseconfig set pxe/nfsroot?$interfaces_eth0_address
univention-baseconfig set pxe/vga?791
univention-baseconfig set pxe/quiet?"no"
univention-baseconfig set pxe/loglevel?"0"

if [ "$1" = configure -a -n "$2" ] && dpkg --compare-versions "$2" lt 1.15; then
    test -f "/var/cache/univention-config/cache" && rm -f "/var/cache/univention-config/cache"
fi

exit 0
