configure: configure-stamp
configure-stamp:
	dh_testdir
	touch configure-stamp

build: configure-stamp build-stamp
build-stamp:
	dh_testdir
	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp
	dh_clean

D=$(CURDIR)/debian/univention-client-boot-pxe

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

	install -m 644 var/lib/univention-client-boot/pxelinux.cfg/default ${D}/var/lib/univention-client-boot/pxelinux.cfg/default
	install -m 755 clientbootpxe.py ${D}/usr/lib/univention-directory-listener/system
	install -m 755 91univention-client-boot-pxe.inst ${D}/usr/lib/univention-install/

	univention-install-baseconfig

binary-arch: build install

binary-indep: build install
	dh_testdir
	dh_testroot
	dh_installdocs
	dh_installchangelogs
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
